	fixture.escena1().transcurrir(fixture.pelicula1())
	assert.that(!fixture.persona1().estoyVivo()and !fixture.persona2().estoyVivo() and fixture.persona3().estoyVivo() and fixture.persona4().estoyVivo())
}

